<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5e9b9"
    android:padding="16dp"
    tools:context="somdosbichos.cursoandroid.com.somdosbichos.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cao"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:id="@+id/imageCao" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gato"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:id="@+id/imageGato" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leao"
        android:layout_below="@+id/imageCao"
        android:layout_alignLeft="@+id/imageCao"
        android:layout_alignStart="@+id/imageCao"
        android:id="@+id/imageLeao" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/macaco"
        android:id="@+id/imageMacaco"
        android:layout_alignRight="@+id/imageGato"
        android:layout_alignEnd="@+id/imageGato"
        android:layout_above="@+id/imageVaca"
        android:layout_alignLeft="@+id/imageGato"
        android:layout_alignStart="@+id/imageGato" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vaca"
        android:id="@+id/imageVaca"
        android:layout_below="@+id/imageLeao"
        android:layout_alignLeft="@+id/imageLeao"
        android:layout_alignStart="@+id/imageLeao"
        android:layout_alignRight="@+id/imageLeao"
        android:layout_alignEnd="@+id/imageLeao" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ovelha"
        android:id="@+id/imagemOvelha"
        android:layout_alignBottom="@+id/imageVaca"
        android:layout_alignLeft="@+id/imageMacaco"
        android:layout_alignStart="@+id/imageMacaco"
        android:layout_below="@+id/imageMacaco" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/direitos"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
